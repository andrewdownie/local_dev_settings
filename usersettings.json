{
  // TODO: install the "vim" package published by "vscodevim"
  // TODO: install the "Ocean-Dark-Soda" theme published by "gerane"
  // Workbench
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.colorTheme": "Ocean-Dark-Soda",
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "none",
  // Window
  "window.title": "${dirty}${rootName} ${dirty}",
  "window.newWindowDimensions": "fullscreen",
  "window.restoreFullscreen": true,
  "window.zoomLevel": 0,
  // Unsorted
  "search.collapseResults": "alwaysCollapse",
  "diffEditor.ignoreTrimWhitespace": true,
  "debug.toolBarLocation": "docked",
  "explorer.sortOrder": "type",
  // Editor
  "editor.scrollbar.vertical": "hidden",
  "editor.overviewRulerBorder": false,
  "editor.lineNumbers": "interval",
  // Minimap
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.minimap.maxColumn": 230,
  "editor.minimap.enabled": false, // Experimenting with not using a minimap to become more familiar with the code
  "editor.minimap.side": "left",
  // Javascript
  "javascript.updateImportsOnFileMove.enabled": "always",
  "workbench.list.horizontalScrolling": true,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.quickSuggestionsDelay": 100,
  "workbench.editor.labelFormat": "short",
  "breadcrumbs.enabled": false,
}
